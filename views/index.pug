extends layout

block content
 h1= title
 p Welcome to #{title} Server 
 p Rajashree Bokka Pug File
 button(type="button", class="btn btn-success" onclick = "doBump()") Press Here
 <br />
 div(id="bump") Bump the count
 <br />

 script.  
   var count = 0;
   var bump = 1;
   function doBump() {
     count+=bump; 
     bump+=1;
     document.getElementById("bump").innerHTML = 'Count ${count} with bump ${bump}';
   }
  
